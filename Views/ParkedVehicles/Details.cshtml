@model Garage_2.Models.ViewModels.DetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Parked vehicle</h4>
    <hr />
    <dl class="row">
		<dt class="col-sm-2">@Html.DisplayNameFor(m => m.Vehicle.RegistrationNumber)</dt>
        <dd class="col-sm-10">@Model.Vehicle.RegistrationNumber</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Vehicle.Make)</dt>
        <dd class="col-sm-10">@Model.Vehicle.Make</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Vehicle.Model)</dt>
        <dd class="col-sm-10">@Model.Vehicle.Model</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Vehicle.NumberOfWheels)</dt>
        <dd class="col-sm-10">@Model.Vehicle.NumberOfWheels</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Vehicle.Color)</dt>
        <dd class="col-sm-10">@Model.Vehicle.Color</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Vehicle.ArrivalTime)</dt>
        <dd class="col-sm-10">
            @Model.Vehicle.ArrivalTime.ToString("yyyy-MM-dd HH:mm")
        </dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Vehicle.Type)</dt>
        <dd class="col-sm-10">@Model.Vehicle.Type</dd>

        <dt class="col-sm-2">Parking spot(s)</dt>
        <dd class="col-sm-10">
            @foreach (var vehicleSpot in Model.VehicleSpots)
            {
                <div>
                    @vehicleSpot.ParkingSpot.SpotNumber
                    @*  @if (vehicleSpot.UnitsUsed < 3) { <span>(@vs.UnitsUsed/3)</span> } *@
                </div>
            }
        </dd>
    </dl>
</div>

<div>
    <a class="btn btn-outline-secondary" asp-action="Index" asp-route-searchString="@ViewData["CurrentFilter"]">Back to List</a>
    <a class="btn btn-primary" asp-action="EditVehicle" asp-route-id="@Model.Vehicle.Id">Edit</a>
</div>
