<form asp-action="Index" method="get">
    <div class="d-none d-sm-flex gap-2 justify-content-end align-items-center">
        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]"
               class="form-control" style="width: 250px;"
               placeholder="Search vehicles..."
               title="Search by text (reg.nr, make, model, color) or use commands: w(4)=wheels, t(car)=type, d(2024-12-19)=date"
               data-bs-toggle="tooltip" />
        <button type="submit" class="btn btn-secondary">Search</button>
    </div>
    <div class="d-flex d-sm-none gap-2 justify-content-end">
        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]"
               class="form-control" placeholder="Search..." />
        <button type="submit" class="btn btn-secondary">Search</button>
    </div>
</form>

@section Scripts {
    <script>
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        tooltipTriggerList.map(function (el) { return new bootstrap.Tooltip(el); });
    </script>
}