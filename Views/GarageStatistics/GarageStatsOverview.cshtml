@model GarageStatisticsViewModel


@{
    ViewData["Title"] = "Garage Statistics";
}

<h1>Garage Statistics</h1>

<div>

    <hr />
    <dl class="row">
        <dt class="col-md-3 text-nowrap">@Html.DisplayNameFor(m => m.TotalVehicles):</dt>
        <dd class="col-md-9">@Model.TotalVehicles</dd>

        <dt class="col-md-3 text-nowrap">@Html.DisplayNameFor(m => m.TotalWheels):</dt>
        <dd class="col-md-9">@Model.TotalWheels</dd>

        <dt class="col-md-3 text-nowrap">@Html.DisplayNameFor(m => m.TotalRevenue):</dt>
        <dd class="col-md-9">@(string.Format("{0:C2}", Model.TotalRevenue))</dd>

        @if (Model.VehiclesPerType != null)
        {
            <dt class="col-sm-3 fs-5  text-nowrap">@Html.DisplayNameFor(m => m.VehiclesPerType)</dt>
            <dd class="col-sm-9"></dd>
            @foreach (VehicleTypeCountViewModel vehicleTypeCount in Model.VehiclesPerType)
            {
                <dt class="col-sm-3">@vehicleTypeCount.Type:</dt>
                <dd class="col-sm-9">@vehicleTypeCount.Count</dd>
            }
        }

    </dl>
</div>
